<%= form_for(@meeting) do |form| %>
  <%= render "error_messages", :target => @meeting %>
<div>
		<%= form.label :meets_on %>:<br/>
		<%= form.date_select :meets_on %>
	</div>
	<div>
		<%= form.label :location %>:<br/>
		<%= form.text_field :location, :size=>35, :class=> "text" %>
	</div>	
	<div>
		<%= form.label :description %>:<br/>
		<%= form.text_area :description, :rows=>4, :class=> "text" %>
	</div>	
  
	<%= form.submit "Save" %>
	<%= link_to "Cancel", {:action =>"index" }, :class => "cancel" %>
	<% end %>  